<main
  class="row"
  data-controller="article-pin modal"
  data-modal-root-selector-value="#article-pin-modal-root"
  data-modal-content-selector-value="#article-pin-modal"
  data-modal-title-value="There's another article pinned..."
  data-modal-size-value="m">
  <div class="col-12">
    <ul class="nav nav-tabs nav-fill">
      <li class="nav-item">
        <a href="<%= admin_articles_path %>" class="nav-link <%= "active" if params[:state].blank? %>">Hot</a>
      </li>
      <li class="nav-item">
        <a
          href="<%= admin_articles_path(state: :chronological) %>"
          class="nav-link <%= "active" if params[:state] == "chronological" %>">Chronological</a>
      </li>
      <li class="nav-item">
        <a
          href="<%= admin_articles_path(state: :satellite) %>"
          class="nav-link <%= "active" if params[:state] == "satellite" %>">Satellite</a>
      </li>
    </ul>
    <% if params[:state] && params[:state].include?("top-") && params[:state] != "top-3" && params[:state] != "top-6" %>
      <h1 style="color:red">
        <%= params[:state] %>-months
      </h1>
    <% end %>
  </div>

  <div class="col-12">
    <% if @pinned_article.present? %>
      <h2><%= image_tag("pin.svg") %> Pinned Article</h2>
      <%= render partial: "individual_article", locals: { article: @pinned_article } %>
    <% end %>
  </div>

  <div class="col-12">
    <% if @featured_articles.present? %>
      <h2>Manually Featured Articles</h2>
      <%= render partial: "individual_article", collection: @featured_articles, as: :article %>
    <% end %>
  </div>

  <div class="col-12">
    <%= paginate @articles %>
    <%= render partial: "individual_article", collection: @articles, as: :article %>
    <%= paginate @articles %>
  </div>

  <div id="article-pin-modal" class="hidden">
    Only <strong>one</strong> article at a time can be pinned. If you proceed,
    this article will no longer be pinned:

    <div class="pinned-article">
      <a href="#" target="_blank" rel="noopener" data-article-pin-target="title">
        What's the meaning of life?
      </a>

      <p>Pinned at <time data-article-pin-target="pinnedAt">January 21st, 2021, 4:45pm</time></p>
    </div>
  </div>
  <div id="article-pin-modal-root"></div>
</main>

<%= render "image_upload_script" %>
